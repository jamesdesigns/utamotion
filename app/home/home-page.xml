<Page loaded="pageLoaded">
    <ActionBar title="UTA Motion" class="action-bar"></ActionBar>
    <TabView>
        <TabView.items>
            <TabViewItem title="Routes">
                <TabViewItem.view>
                    <StackLayout class="p-20">
                        <Label text="Find Your Route" class="font-weight-bold" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Map">
                <TabViewItem.view>
                    <StackLayout class="p-20">
                        <Label text="Map of All Routes" class="font-weight-bold" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Location">
                <TabViewItem.view>
                    <StackLayout class="p-20">
                        <Label text="Current Location" class="font-weight-bold" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
             <TabViewItem title="Favorites">
                <TabViewItem.view>
                    <StackLayout class="p-20">
                        <Label text="Favorites" class="font-weight-bold" />
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
        </TabView.items>
    </TabView>

</Page>
